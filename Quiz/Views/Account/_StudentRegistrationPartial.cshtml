@model StudentRegistrationViewModel

<div class="form-group">
    <label asp-for="FacultyId">Faculty</label>
    <select asp-for="FacultyId" asp-items="@(new SelectList(Model.Faculties, "Id", "Name"))" class="form-control"></select>
</div>

<div class="form-group">
    <label asp-for="EducationTypeId">Education Type</label>
    <select asp-for="EducationTypeId" asp-items="@(new SelectList(Model.EducationTypes, "Id", "Name"))" class="form-control"></select>
</div>

<div class="form-group">
    <label asp-for="SpecializationId">Specialization</label>
    <select asp-for="SpecializationId" asp-items="@(new SelectList(Model.Specializations, "Id", "Name"))" class="form-control"></select>
</div>
