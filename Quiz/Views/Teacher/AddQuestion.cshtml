@model QuestionModel.ViewModels.QuestionViewModel

@{
    ViewData["Title"] = "Add Question";
}

<h2>Add Question</h2>

<form asp-action="AddQuestion" method="post">
    <div class="form-group">
        <label for="questionText">Question Text</label>
        <input type="text" class="form-control" id="questionText" name="Text" value="@Model.Text" required />
    </div>

    <h4>Options</h4>

    @for (int i = 0; i < Model.Options?.Count; i++)
    {
        <div class="form-group">
            <label>Option @("ABCDEFGHIJKLMNOPQRSTUVWXYZ"[i]):</label>
            <input type="text" class="form-control" name="Options[@i].Text" value="@Model.Options[i].Text" required />

            <input type="radio" name="CorrectAnswer" value="@("ABCDEFGHIJKLMNOPQRSTUVWXYZ"[i])"
            @(Model.CorrectAnswer == "ABCDEFGHIJKLMNOPQRSTUVWXYZ"[i].ToString() ? "checked" : "") />
            <label>Select as Correct Answer</label>
        </div>
    }


    <div class="form-group">
        <label for="points">Points</label>
        <input type="number" class="form-control" id="points" name="Points" value="@Model.Points" required />
    </div>

    <button type="submit" class="btn btn-primary">Save Question</button>
</form>
