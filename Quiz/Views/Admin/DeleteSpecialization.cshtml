@model Authentication.Models.Specialization

@{
    ViewData["Title"] = "Delete Specialization";
}

<h2>Delete Specialization</h2>

<h3>Are you sure you want to delete this specialization: <strong>@Model.Name</strong>?</h3>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <div>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Dashboard" class="btn btn-secondary">Cancel</a>
    </div>
</form>
