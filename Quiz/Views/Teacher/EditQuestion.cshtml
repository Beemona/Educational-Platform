@model QuestionModel.ViewModels.QuestionViewModel

<h1>Edit Question</h1>

<form asp-action="EditQuestion" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div class="form-group">
        <label for="Text">Question Text</label>
        <input type="text" class="form-control" id="Text" name="Text" value="@Model.Text" required />
    </div>
    <div class="form-group">
        <label for="CorrectAnswer">Correct Answer</label>
        <input type="text" class="form-control" id="CorrectAnswer" name="CorrectAnswer" value="@Model.CorrectAnswer" required />
    </div>
    <div class="form-group">
        <label for="Percentage">Percentage of Grade</label>
        <input type="number" class="form-control" id="Percentage" name="Percentage" value="@Model.Percentage" min="0" max="100" required />
    </div>
    <div class="form-group">
        <label>Options</label>
        @for (int i = 0; i < Model.Options.Count; i++)
        {
            <div class="form-check">
                <input type="text" class="form-control" name="Options[@i].Text" value="@Model.Options[i].Text" required />
                <input type="hidden" name="Options[@i].Value" value="@Model.Options[i].Value" />
            </div>
        }
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
