@{
    ViewData["Title"] = "Upload Word Document";
}

<form asp-controller="Document" asp-action="UploadWord" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="wordFile">Select Word file:</label>
        <input type="file" id="wordFile" name="wordFile" accept=".docx" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Upload</button>
</form>
