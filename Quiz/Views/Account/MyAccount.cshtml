@model Authentication.Models.MyAccountViewModel

@{
    ViewData["Title"] = "My Account";
}

<h2>My Account</h2>

<div>
    <h3>@Model.UserName's Account Details</h3>
    <p><strong>Email:</strong> @Model.Email</p>
    <p><strong>Role:</strong> @Model.Role</p>

    @if (Model.Role == "Student")
    {
        <p><strong>Faculty:</strong> @Model.Faculty?.Name</p>
        <p><strong>Education Type:</strong> @Model.EducationType?.Name</p>
        <p><strong>Specialization:</strong> @Model.Specialization?.Name</p>
    }
    else if (Model.Role == "Teacher")
    {
        <p><strong>Department:</strong> @Model.Department?.Name</p>
    }
    else if (Model.Role == "Admin")
    {
        <p><strong>Admin Account:</strong> You have full access.</p>
    }

    <a asp-action="EditAccount" class="btn btn-primary">Edit Account</a>
</div>
