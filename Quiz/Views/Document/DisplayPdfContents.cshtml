@{
    ViewData["Title"] = "PDF Contents";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

<div class="container">
    <h1>PDF Contents</h1>

    @if (ViewData["PdfContents"] != null)
    {
        <div>
            @Html.Raw(ViewData["PdfContents"])
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No PDF content available to display.
        </div>
    }

    <hr />

    <a asp-controller="Document" asp-action="UploadPdf" class="btn btn-secondary">Upload Another PDF</a>
</div>
