@{
    ViewData["Title"] = "Quiz Results";
    var resultDetails = ViewBag.ResultDetails as List<QuestionModel.Models.QuestionResult>;
}

<h1>Quiz Results</h1>
<p>Your score: @ViewBag.Score out of @ViewBag.TotalQuestions</p>

@if (resultDetails != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Question</th>
                <th>Your Answer</th>
                <th>Correct Answer</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var result in resultDetails)
            {
                <tr>
                    <td>@result.QuestionText</td>
                    <td>@result.SelectedAnswer</td>
                    <td>@result.CorrectAnswer</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results to display.</p>
}
